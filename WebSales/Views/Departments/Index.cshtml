@model IEnumerable<WebSales.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<p class="my-4">
    <a asp-action="Create" class="btn btn-primary rounded-5">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="bg-primary">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="bg-primary"></th>
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fs-5 fw-bold align-content-center">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary mx-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
