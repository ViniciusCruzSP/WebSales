@model IEnumerable<WebSales.Models.SalesRecord>;

@{
    ViewData["Title"] = "Simple Search";
}

<style>
    @@media (max-height: 800px) {
        .overflow {
            max-height: 285px;
        }
    }

    @@media (min-height: 801px) {
        .overflow {
            max-height: 600px;
        }
    }
</style>

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse bg-primary">
    <div class="container-fluid">
        <form class="d-flex navbar-form navbar-left align-items-end" role="search">
            <div class="d-flex form-group me-3">
                <div class="form-group me-3">
                    <label for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
                </div>
                <div class="form-group me-3">
                    <label for="maxDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
                </div>
            </div>
            <button type="submit" class="btn btn-secondary">Filter</button>
        </form>

    </div>
</nav>
<div class="panel panel-primary mt-2">
    <div class="panel-heading">
        <h3 class="panel-title">
            Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")
        </h3>
    </div>
    <div class="overflow panel-body" style="overflow-y: auto">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th class="bg-primary">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="bg-primary">
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th class="bg-primary">
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>
                    <th class="bg-primary">
                        @Html.DisplayNameFor(model => model.Seller.Department)
                    </th>
                    <th class="bg-primary">
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th class="bg-primary">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>