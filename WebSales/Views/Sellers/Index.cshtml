@model IEnumerable<WebSales.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<div class="d-flex mt-4 mb-2 justify-content-center">
    <h1>@ViewData["Title"]</h1>
    <p class="ms-3 mt-1">
        <a asp-action="Create" class="btn btn-primary rounded-5">Create New</a>
    </p>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="bg-primary">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="bg-primary">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="bg-primary">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th class="bg-primary">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th class="bg-primary"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td class="fw-bold">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td class="text-center">
                    <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary mx-2 btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>